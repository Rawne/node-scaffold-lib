{
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types"
        ],
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "rootDir": "./src"
    },
    "includes": [
        "src/*.ts",
        "src/**/*.ts",
        "test/*.tests.ts",
        "test/**/*.ts"
    ]
}